import { NextResponse } from 'next/server';
import { prisma } from '@/lib/prisma';
import { getUserFromSession } from '@/lib/auth';
import axios from 'axios';

// --- ConfirmIdent (BVN) Credentials ---
const CONFIRMIDENT_API_KEY = process.env.CONFIRMIDENT_API_KEY;
const BVN_VERIFY_ENDPOINT = 'https://confirmident.com.ng/api/bvn_search';

// --- Payvessel Credentials ---
const PAYVESSEL_API_KEY = process.env.PAYVESSEL_API_KEY;
const PAYVESSEL_API_SECRET = process.env.PAYVESSEL_API_SECRET;
const PAYVESSEL_BUSINESS_ID = process.env.PAYVESSEL_BUSINESS_ID;
const PAYVESSEL_ENDPOINT = 'https://api.payvessel.com/pms/api/external/request/customerReservedAccount/';

// --- Helper Functions ---
function parseBvnData(data: any): {
  firstName: string | null;
  lastName: string | null;
  dateOfBirth: string | null;
  nin: string | null;
} {
  console.log("Parsing BVN data..."); // DEBUG
  const coreData = data.data;
  const firstName = coreData?.firs_tname || null;
  const lastName = coreData?.last_name || null;
  const dateOfBirth = coreData?.date_of_birth || null;
  const nin = coreData?.nin || null;
  return { firstName, lastName, dateOfBirth, nin };
}

function formatPhoneForPayvessel(internationalPhone: string): string {
  if (internationalPhone.startsWith('+234')) {
    return '0' + internationalPhone.substring(4);
  }
  return internationalPhone;
}
// ---------------------------------------------

export async function POST(request: Request) {
  console.log("--- BVN WALLET ACTIVATION API HIT ---"); // DEBUG
  
  // 1. Get User
  const user = await getUserFromSession();
  if (!user) {
    console.error("Auth Error: No user session found.");
    return NextResponse.json({ error: 'Unauthorized' }, { status: 401 });
  }

  // 2. Check for missing API keys
  if (!CONFIRMIDENT_API_KEY || !PAYVESSEL_API_KEY || !PAYVESSEL_API_SECRET || !PAYVESSEL_BUSINESS_ID) {
    console.error('CRITICAL: Missing one or more API keys in environment.');
    return NextResponse.json({ error: 'Server configuration error.' }, { status: 500 });
  }

  let price: any;
  let wallet: any;

  try {
    const body = await request.json();
    const { bvn, dob } = body; 

    if (!bvn || !dob) {
      console.error("Validation Error: BVN or DOB missing.");
      return NextResponse.json({ error: 'BVN and Date of Birth are required' }, { status: 400 });
    }
    console.log(`Payload received: BVN ${bvn}, DOB ${dob}`); // DEBUG

    // --- 3. Get Price & Check Wallet ---
    console.log("Fetching service price for NIN_LOOKUP..."); // DEBUG
    const service = await prisma.service.findUnique({ where: { id: 'NIN_LOOKUP' } });
    if (!service) {
      console.error("DB Error: NIN_LOOKUP service not found.");
      return NextResponse.json({ error: 'Verification service (NIN_LOOKUP) not found.' }, { status: 503 });
    }
    
    price = user.role === 'AGGREGATOR' ? service.platformPrice : service.defaultAgentPrice;
    console.log(`Price calculated: â‚¦${price}`); // DEBUG

    wallet = await prisma.wallet.findUnique({ where: { userId: user.id } });
    if (!wallet || wallet.balance.lessThan(price)) {
      console.error("Wallet Error: Insufficient funds.");
      return NextResponse.json({ error: 'Insufficient funds for BVN verification.' }, { status: 402 });
    }
    console.log("Wallet check passed."); // DEBUG

    // --- 4. Call ConfirmIdent BVN API ---
    let data: any; 
    
    // --- THIS IS THE FIX ---
    // The payload must *only* contain 'bvn', as per their documentation.
    const confirmIdentPayload = {
      bvn: bvn,
    };
    // -----------------------
    
    console.log("Sending to ConfirmIdent:", confirmIdentPayload); // DEBUG

    try {
      const apiResponse = await axios.post(
        BVN_VERIFY_ENDPOINT, 
        confirmIdentPayload,
        { 
          headers: {
            'api-key': CONFIRMIDENT_API_KEY,
            'Content-Type': 'application/json',
          },
        }
      );
      data = apiResponse.data; 
      console.log("Received from ConfirmIdent (Success):", JSON.stringify(data, null, 2)); // DEBUG
      
    } catch (apiError: any) {
      console.error("ConfirmIdent API CALL FAILED:", apiError.response ? JSON.stringify(apiError.response.data) : apiError.message); // DEBUG
      throw new Error("The BVN verification service is currently unavailable.");
    }

    // --- 5. Handle ConfirmIdent Error Response ---
    if (data.success !== true) {
      console.error("ConfirmIdent Logic Error:", data.message); // DEBUG
      throw new Error(data.message || "BVN verification failed.");
    }
    
    // --- 6. Parse and Validate ---
    const { firstName, lastName, dateOfBirth, nin } = parseBvnData(data);

    if (!firstName || !lastName || !dateOfBirth) {
      console.error("Parsing Error: Required fields (name, dob) not found in API response."); // DEBUG
      throw new Error("BVN record not found or response was incomplete.");
    }

    let bvnDob = dateOfBirth; // e.g., "01-01-2000"
    if (bvnDob.includes('-') && bvnDob.length === 10) {
      const parts = bvnDob.split('-');
      bvnDob = `${parts[2]}-${parts[1]}-${parts[0]}`; // "2000-01-01"
    }

    if (bvnDob !== dob) {
      console.error(`DOB Mismatch. User: ${dob}, BVN: ${bvnDob}`); // DEBUG
      return NextResponse.json(
        { error: 'Date of Birth does not match BVN record.' }, { status: 400 }
      );
    }
    console.log("DOB Matched."); // DEBUG

    const finalNin = nin || bvn;
    
    // --- 7. Update User & Charge Wallet (in a transaction) ---
    console.log("Starting database transaction (charge user, save data)..."); // DEBUG
    await prisma.$transaction([
      prisma.wallet.update({
        where: { userId: user.id },
        data: { balance: { decrement: price } },
      }),
      prisma.transaction.create({
        data: {
          userId: user.id,
          serviceId: service.id,
          type: 'SERVICE_CHARGE',
          amount: price.negated(),
          description: `BVN Verification (Wallet Activation)`,
          reference: `BVN-ACTIVATE-${Date.now()}`,
          status: 'COMPLETED',
        },
      }),
      prisma.user.update({
        where: { id: user.id },
        data: {
          firstName: firstName,
          lastName: lastName,
          bvn: bvn,
          nin: finalNin,
          isIdentityVerified: true,
        },
      })
    ]);
    console.log("Database transaction successful."); // DEBUG

    // --- 8. Call Payvessel API ---
    const payvesselPayload = {
      email: user.email,
      name: `${firstName} ${lastName}`,
      phoneNumber: formatPhoneForPayvessel(user.phoneNumber),
      bankcode: ["999991", "120001"],
      account_type: "STATIC",
      businessid: PAYVESSEL_BUSINESS_ID,
      bvn: bvn,
      nin: finalNin,
    };
    
    console.log("Sending to Payvessel:", payvesselPayload); // DEBUG

    const payvesselResponse = await axios.post(
      PAYVESSEL_ENDPOINT,
      payvesselPayload,
      {
        headers: {
          'api-key': PAYVESSEL_API_KEY,
          'api-secret': `Bearer ${PAYVESSEL_API_SECRET}`,
          'Content-Type': 'application/json',
        },
      }
    );

    const payvesselData = payvesselResponse.data;
    console.log("Received from Payvessel:", payvesselData); // DEBUG

    if (!payvesselData.status || !payvesselData.banks || payvesselData.banks.length === 0) {
      throw new Error(payvesselData.message || 'Failed to create virtual accounts.');
    }

    // --- 9. Save Accounts to Database ---
    console.log("Saving virtual accounts to database..."); // DEBUG
    const accountData = payvesselData.banks.map((bank: any) => ({
      userId: user.id,
      bankName: bank.bankName,
      accountNumber: bank.accountNumber,
      accountName: bank.accountName,
      accountType: bank.account_type,
      reference: bank.trackingReference,
    }));

    await prisma.virtualAccount.createMany({
      data: accountData,
    });
    console.log("Virtual accounts saved."); // DEBUG

    // --- 10. Send Success Response ---
    return NextResponse.json({ 
      message: "Wallet activated successfully!",
      banks: payvesselData.banks 
    }, { status: 200 });

  } catch (error: any) {
    console.error('Wallet Activation Error (Final Catch):', error.message); // DEBUG
    return NextResponse.json(
      { error: error.message || 'An internal server error occurred.' },
      { status: 400 } 
    );
  }
}
