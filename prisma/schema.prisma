// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// -------------------------------------------------
// DATABASE MODELS
// -------------------------------------------------

model User {
  id                    String              @id @default(uuid())
  firstName             String?
  lastName              String?
  businessName          String?
  email                 String              @unique
  whatsappNumber        String              @unique
  passwordHash          String
  address               String?
  isWhatsappVerified    Boolean             @default(false)
  isEmailVerified       Boolean             @default(false)
  bvn                   String? // Should be encrypted in the app, DB just stores text
  nin                   String? // From BVN API
  role                  Role                @default(AGENT)
  createdAt             DateTime            @default(now())
  
  // --- Relations ---
  wallet                Wallet?
  payvesselAccounts     PayvesselAccount[]
  transactions          Transaction[]
}

model Wallet {
  id                String    @id @default(uuid())
  userId            String    @unique
  balance           Decimal   @default(0.00)
  commissionBalance Decimal   @default(0.00)
  updatedAt         DateTime  @updatedAt

  // --- Relations ---
  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model PayvesselAccount {
  id                String    @id @default(uuid())
  userId            String
  bankName          String
  accountNumber     String
  accountName       String
  trackingReference String    @unique

  // --- Relations ---
  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Transaction {
  id                String          @id @default(uuid())
  userId            String
  type              TransactionType
  status            Status          @default(PENDING)
  amount            Decimal
  reference         String          @unique
  providerReference String?
  createdAt         DateTime        @default(now())

  // --- Relations ---
  user              User            @relation(fields: [userId], references: [id])
}


// -------------------------------------------------
// ENUMS (Used for defining choices)
// -------------------------------------------------

enum Role {
  AGENT
  AGGREGATOR
  ADMIN
}

enum Status {
  PENDING
  SUCCESSFUL
  FAILED
}

enum TransactionType {
  FUNDING
  NIN_LOOKUP
  NIN_SLIP
  BVN_VERIFICATION
  WITHDRAWAL
  SERVICE_FEE
}
