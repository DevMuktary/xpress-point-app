// This is your Prisma schema file.
// It tells Prisma what your database looks like.

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. USERS TABLE
model User {
  id                    String    @id @default(uuid())
  firstName             String    @map("first_name")
  lastName              String    @map("last_name")
  businessName          String?   @map("business_name")
  address               String?
  email                 String    @unique
  phoneNumber           String    @unique @map("phone_number")
  passwordHash          String    @map("password_hash")
  role                  Role      @default(AGENT)
  isPhoneVerified       Boolean   @default(false) @map("is_phone_verified")
  isEmailVerified       Boolean   @default(false) @map("is_email_verified")
  isIdentityVerified    Boolean   @default(false) @map("is_identity_verified")
  createdAt             DateTime  @default(now()) @map("created_at")
  bvn                   String?
  nin                   String?
  
  // --- Relations ---
  wallet                Wallet?
  virtualAccounts       VirtualAccount[]
  transactions          Transaction[]
  ninVerifications      NinVerification[]

  @@map("users")
}

// 2. WALLETS TABLE
model Wallet {
  id        String   @id @default(uuid())
  userId    String   @unique @map("user_id")
  balance   Decimal  @default(0.00)
  updatedAt DateTime @updatedAt @map("updated_at")
  
  // --- Relation ---
  user      User     @relation(fields: [userId], references: [id])

  @@map("wallets")
}

// 3. VIRTUAL ACCOUNTS TABLE
model VirtualAccount {
  id             String   @id @default(uuid())
  userId         String   @map("user_id")
  bankName       String   @map("bank_name")
  accountNumber  String   @unique @map("account_number")
  accountName    String   @map("account_name")
  accountType    String   @default("STATIC") @map("account_type")
  reference      String   @unique

  // --- Relation ---
  user           User     @relation(fields: [userId], references: [id])

  @@map("virtual_accounts")
}

// 4. TRANSACTIONS TABLE
model Transaction {
  id          String   @id @default(uuid())
  userId      String   @map("user_id")
  type        String   // "DEPOSIT", "SERVICE_CHARGE", "UPGRADE_FEE"
  amount      Decimal
  description String
  reference   String   @unique
  status      String   // "COMPLETED", "PENDING", "FAILED"
  createdAt   DateTime @default(now()) @map("created_at")

  // --- Relation ---
  user        User     @relation(fields: [userId], references: [id])

  @@map("transactions")
}

// 5. NIN VERIFICATIONS TABLE (For Phase 3)
model NinVerification {
  id              String   @id @default(uuid())
  userId          String   @map("user_id")
  data            Json     // Stores the full JSON from Robosttech
  expiresAt       DateTime @map("expires_at")
  
  // --- Relation ---
  user            User     @relation(fields: [userId], references: [id])

  @@map("nin_verifications")
}

// Enum for User Roles
enum Role {
  AGENT
  AGGREGATOR
  ADMIN
}
